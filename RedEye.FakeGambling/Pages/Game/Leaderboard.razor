@page "/Game/Leaderboard"
@inherits LeaderboardBase
@using RedEye.FakeGambling.Data;
@inject IGameService _gameService

<ul id="messagesList">
</ul>
<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Leaderboards</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        @foreach (var message in _gameService.LeaderboardsHistory)
        {
            <MudText>@message</MudText>
        }

    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Play more</MudButton>
    </MudCardActions>
</MudCard>