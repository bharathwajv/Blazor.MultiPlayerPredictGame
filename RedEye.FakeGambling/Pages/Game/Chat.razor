@page "/Game/Chat"
    @using RedEye.FakeGambling.Data;
    @inject IGameService _gameService
    @inherits ChatBase


    <MudPaper >

        <MudCard>
            <MudText Typo="Typo.h6" GutterBottom="true">Live Chat</MudText>
            <MudPaper Style="max-height: 500px; max-Width: 400px; overflow-y: scroll">
                <MudList Clickable="true">
                    @foreach (var msg in _gameService.ChatMessages)
                    {
                        <MudListItem Text="@msg"></MudListItem>
                    }
                </MudList>
            </MudPaper>

            <MudItem xs=12 Class="ml-auto">
                <EditForm Model="@info" OnValidSubmit="Send">


                    <MudTextField @bind-Value="info.Message" Label="Message" Variant="Variant.Text"></MudTextField>

                    <MudButton ButtonType="ButtonType.Submit" Disabled="@(!IsHubConnected)" Class="mb-2 pt-2 pb-2 ml-auto">Send Message</MudButton>

                </EditForm>
            </MudItem>
        </MudCard>
    </MudPaper>
